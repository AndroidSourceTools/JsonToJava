	<script>
	$( document ).ready(function() {
	    $("#generate").submit(function(event){
	    	generate();
	    	event.preventDefault();
	    	return false;
	    });
	});
	function generate(){
		var formData = $("#generate").serialize();
		
		$.get( "jsontojava",formData, function( data ) {
			  $( ".result" ).html( data );
			  alert( "Load was performed." );
			});
	}
	</script>
